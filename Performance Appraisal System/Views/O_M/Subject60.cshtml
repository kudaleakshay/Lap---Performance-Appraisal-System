<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    function Total_Staff() {
        var Total = Number($("#Officer_Count").val()) + Number($("#Staff_Count").val());
        $("#Total_Staff").val(Total);
        $("#Total_Staff").css("font-weight", "bold");
    }

    function Total_Target() {
        var Total = Number($("#Officer_Target").val()) + Number($("#Staff_Target").val());
        $("#Total_Target").val(Total);
        $("#Total_Target").css("font-weight", "bold");
    }

    function Total_Achieved() {
        var Total = Number($("#Last_Month_Achieved").val()) + Number($("#Current_Month_Achieved").val());
        $("#Total_Achieved").val(Total);
        $("#Total_Achieved").css("font-weight", "bold");
    }

    function Current_Month_Percentage() {
        var Total = ( (Number($("#Total_Achieved").val()) * 100) / Number($("#Current_Month_Aim").val()) );
        $("#Current_Month_Percentage").val(Total.toFixed(2));
        $("#Current_Month_Percentage").css("font-weight", "bold");
    }

    function Appraisal_Marks() {
        var Total = ((Number($("#Total_Achieved").val()) * 5) / Number($("#Total_Target").val()));
        $("#Appraisal_Marks").val(Total.toFixed(2));
        $("#Appraisal_Marks").css("font-weight", "bold");
    }

    function Appraisal_Percentage() {
        var Total = ( Number($("#Appraisal_Marks").val()) * 100 / 5);
        $("#Appraisal_Percentage").val(Total.toFixed(2));
        $("#Appraisal_Percentage").css("font-weight", "bold");
    }

 


    $("#Officer_Count").change(Total_Staff);
    $("#Staff_Count").change(Total_Staff);

    $("#Officer_Target").change(Total_Target);
    $("#Staff_Target").change(Total_Target);

    $("#Last_Month_Achieved").change(Total_Achieved);
    $("#Current_Month_Achieved").change(Total_Achieved);

    $("#Current_Month_Aim").change(Current_Month_Percentage);
    $("#Last_Month_Achieved").change(Current_Month_Percentage);
    $("#Current_Month_Achieved").change(Current_Month_Percentage);

    $("#Officer_Target").change(Appraisal_Marks);
    $("#Staff_Target").change(Appraisal_Marks);
    $("#Last_Month_Achieved").change(Appraisal_Marks);
    $("#Current_Month_Achieved").change(Appraisal_Marks);


    $("#Officer_Target").change(Appraisal_Percentage);
    $("#Staff_Target").change(Appraisal_Percentage);
    $("#Last_Month_Achieved").change(Appraisal_Percentage);
    $("#Current_Month_Achieved").change(Appraisal_Percentage);

</script>
