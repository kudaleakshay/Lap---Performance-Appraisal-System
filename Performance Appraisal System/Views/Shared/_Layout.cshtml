<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -सहकार आयुक्त व निबंधक</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/fevicon.ico" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="page-wrapper">

        <div class="top-header">
            <div class="left-top-header">
                @* <div class="top-search-box">
                        <input type="search" class="form-control" placeholder="येथे शोधा">
                        <i class="fa fa-search"></i>
                    </div>*@
            </div>
            <div class="right-top-header">
