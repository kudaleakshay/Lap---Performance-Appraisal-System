            @if (Session["UserName"] != null)
            {
<a class="active" style=" float: right;background-color:#021d4d; color: white;" href="/Account/Logout">लॉग ऑऊट</a>
                <a style="float: right; color: white;"> @Session["Name"].ToString() !</a> }
            else
            {
<a class="active" style="float: right; background-color: #021d4d; color: white;" href="/Account/Login">लॉग इन</a>}


        </div>


        <div class="page-container" style="margin-top: 1px !important;">
            <div class="page-content">
                <br>
                @RenderBody()
                <br>
                <br>
            </div>
        </div>
        <hr />

        <footer>
            <div class="page-footer" style="height:auto !important;">
                <div class="page-footer-inner container-fluid">
                    <div class="footer-content">
                        <ul class="footer-left">
                            <li><a href="/">मुखपृष्ठ</a></li>
                            <li><a href="/Report/OfficeReportSelection">मुल्यांकन अहवाल पहा</a></li>
                            <li><a href="/Report/DepartmentWiseReport">मुल्यांकन अहवाल भरा</a></li>
                            <li><a href="/Home/Downloads">उपयोगकर्ता पुस्तिका</a></li>
                            <li><a href="/Home/Contact">संपर्क</a></li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="page-footer" style="background-color: #fff;">
                <div class="page-footer-inner container-fluid">
                    © हे सहकार आयुक्त आणि निबंधक, सहकारी संस्था, महाराष्ट्र राज्य, पुणे अधिकृत संकेतस्थळ आहे. सर्व हक्क सुरक्षित.
                </div>
                <div class="scroll-to-top">
                    <i class="icon-arrow-up"></i>
                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-3.5.1.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/umd/popper.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")


    @Scripts.Render("https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.6.5/js/buttons.html5.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.6.5/js/buttons.print.min.js")

    @Scripts.Render("https://code.highcharts.com/highcharts.js")
    @Scripts.Render("https://code.highcharts.com/modules/no-data-to-display.js")

    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js")

    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {

        var Message = @Html.Raw(Json.Encode(TempData["Message"]));
        var Error = @Html.Raw(Json.Encode(TempData["Error"]));

        toastr.options = {
            "debug": false,
            "positionClass": "toast-bottom-right",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 7000,            
            "closeButton": true,
            "extendedTimeOut": 1000
        }

        if (Message != null) {
            toastr.success(Message, 'Success');
        }
        if (Error != null) {
            toastr.error(Error);
        }
    });

</script>