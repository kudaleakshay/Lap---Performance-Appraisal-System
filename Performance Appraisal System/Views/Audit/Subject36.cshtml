@model Performance_Appraisal_System.Models.Report36

@{
    ViewBag.Title = "लेखापरीक्षण पुर्ण न झालेल्या संस्था व लेखापरीक्षक यांचेवर केलेली कारवाई";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
@using (Html.BeginForm("Subject36", "Audit", FormMethod.Post))
{
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <br>
            <br>
            <h3 class="card-title text-center"><strong>विभागीय सहनिबंधक, जिल्हा उपनिबंधक व त्या अंतर्गत असलेले उपनिबंधक कार्यालये यांसाठी अधिकाऱ्यांचा मूल्यांक भारांक तक्ता</strong></h3>
            <hr>
            <div class="card-text">
                <div class="center-group">
                    <div class="form-row" style="line-height:40px">
                        <div class="form-group col-md-12 center-div" style="color: #e77817 !important; font-size: 20px;">
                            कार्यासनाचे नाव: <strong> @Session["ReportDepartmentName"].ToString() </strong> <br> विषय: <strong> @ViewBag.Title </strong>
                            <br><strong> गुण:  @Session["TotalMarks"].ToString() </strong>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.DropDownListFor(model => model.Month, (IEnumerable<SelectListItem>)ViewBag.Months, "-- महिना निवडा --", new { @class = "form-control" })
                            <br>
                            @Html.ValidationMessageFor(temp => temp.Month)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.DropDownListFor(model => model.Year, (IEnumerable<SelectListItem>)ViewBag.Years, "-- वर्ष निवडा --", new { @class = "form-control" })
                            <br>
                            @Html.ValidationMessageFor(temp => temp.Year)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="form-group col-md-12 center-div" style="font-size: 20px;">
        @Html.CheckBoxFor(temp => temp.NotApplicable, new { id = "NotApplicable" })
        <strong>&nbsp&nbspविषय लागु नाही / या महिन्यासाठी उद्दिष्ट व साध्य लागु नाही</strong>
    </div>


    <div id="WrappperDiv">
        <div class="container" style="padding: 30px;background: white;">
            <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
                <div class="card-text">
                    <div class="center-group">
                        <br>
                        <span style="color: #e77817 !important; font-size: 16px;">लेखापरीक्षण पुर्ण न झालेल्या संस्था व लेखापरीक्षक यांची माहिती</span>
                        <hr>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Eligible_for_Audit)
                                @Html.TextBoxFor(temp => temp.Eligible_for_Audit, new { id = "Eligible_for_Audit", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Eligible_for_Audit)
                            </div>
                        </div>
                        <hr>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Current_Month_Audit)
                                @Html.TextBoxFor(temp => temp.Current_Month_Audit, new { id = "Current_Month_Audit", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Current_Month_Audit)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Current_Month_Remaining_for_Audit)
                                @Html.TextBoxFor(temp => temp.Current_Month_Remaining_for_Audit, new { id = "Current_Month_Remaining_for_Audit_val", @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(temp => temp.Current_Month_Remaining_for_Audit)
                                @Html.HiddenFor(temp => temp.Current_Month_Remaining_for_Audit, new { id = "Current_Month_Remaining_for_Audit" })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container" style="padding: 30px;background: white;">
            <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
                <div class="card-text">
                    <div class="center-group">
                        <br>
                        <span style="color: #e77817 !important; font-size: 16px;">कारवाई केल्याचे प्रमाण</span>
                        <hr>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Action_Taken)
                                @Html.TextBoxFor(temp => temp.Action_Taken, new { id = "Action_Taken", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Action_Taken)
                            </div>

                        </div>

                        <hr>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Percentage_Action_Taken)
                                @Html.TextBoxFor(temp => temp.Percentage_Action_Taken, new { id = "Percentage_Action_Taken_val", @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(temp => temp.Percentage_Action_Taken)
                                @Html.HiddenFor(temp => temp.Percentage_Action_Taken, new { id = "Percentage_Action_Taken" })
                            </div>


                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Marks_Action_Taken)
                                @Html.TextBoxFor(temp => temp.Marks_Action_Taken, new { id = "Marks_Action_Taken_val", @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(temp => temp.Marks_Action_Taken)
                                @Html.HiddenFor(temp => temp.Marks_Action_Taken, new { id = "Marks_Action_Taken" })
                            </div>
                        </div>
                    </div>


                   
                </div>
            </div>
        </div>


        <div class="container" style="padding: 30px;background: white;">
            <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
                <div class="card-text">
                    <div class="center-group">
                        <br>
                        <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                        <hr>
                        <div class="form-row">

                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Appraisal_Marks)
                                @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                                @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(temp => temp.Appraisal_Percentage)
                                @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                                @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                            </div>

                            @*<div class="form-group col-md-10">
                                    @Html.LabelFor(temp => temp.Remarks)
                                    @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                    @Html.ValidationMessageFor(temp => temp.Remarks)
                                </div>*@

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 17px;">
                        Confirmation / पुष्टीकरण
                    </span>
                    <hr>

                    <div style="text-align:justify; font-size: 16px; line-height:25px">
                        I affirm that the above mentioned information submitted by me is true and correct to my knowledge and belief. / मी प्रमाणित करतो की मी वर नमूद केलेली माहिती माझ्या माहितीनुसार सत्य आणि अचूक आहे.
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success" OnClick="SetValue()">Submit / माहिती भरा</button>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>


    <br>
    <br>


}

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
      $(document).ready()
    {
        var isReportSubmitted = @Html.Raw(Json.Encode(ViewBag.isReportSubmitted));
        if (isReportSubmitted == true) {
            if (window.confirm('या महिन्यासाठीचा मुल्यांकन अहवाल आपण सादर केला आहे.'))
                window.open("/Report/DepartmentWiseReport", "_self");
            else
                window.open("/Report/DepartmentWiseReport", "_self");
        }

        var Total_Marks = Number(@Session["TotalMarks"].ToString());
    }


    function Current_Month_Remaining_for_Audit() {
        var Total = Number($("#Eligible_for_Audit").val()) - Number($("#Current_Month_Audit").val());

        $("#Current_Month_Remaining_for_Audit").val(Total);
        $("#Current_Month_Remaining_for_Audit_val").val(Total);
        $("#Current_Month_Remaining_for_Audit_val").css("font-weight", "bold");
    }


    function Percentage_Action_Taken() {
        var Total = Number($("#Action_Taken").val()) * 100 / Number($("#Current_Month_Remaining_for_Audit").val());
        Total = Total.toFixed(2);

        if (isNaN(Total) || Total == "Infinity") {  // Matches +0, -0, NaN
            Total = 0;
        }

        $("#Percentage_Action_Taken").val(Total);
        $("#Percentage_Action_Taken_val").val(Total);
        $("#Percentage_Action_Taken_val").css("font-weight", "bold");
    }


    function Marks_Action_Taken() {
        var Total = Number($("#Action_Taken").val()) * Total_Marks / Number($("#Current_Month_Remaining_for_Audit").val());
        Total = Total.toFixed(2);

        if (isNaN(Total) || Total == "Infinity") {  // Matches +0, -0, NaN
            Total = 0;
        }

        $("#Marks_Action_Taken").val(Total);
        $("#Marks_Action_Taken_val").val(Total);
        $("#Marks_Action_Taken_val").css("font-weight", "bold");
    }


    function Appraisal_Percentage() {
        var Total = (Number($("#Action_Taken").val()) * 100 / Number($("#Current_Month_Remaining_for_Audit").val()));
        Total = Total.toFixed(2);

        if (isNaN(Total) || Total == "Infinity") {  // Matches +0, -0, NaN
            Total = 0;
        }

        $("#Appraisal_Percentage").val(Number(Total));
        $("#Appraisal_Percentage_val").val(Number(Total));
        $("#Appraisal_Percentage_val").css("font-weight", "bold");
    }

    function Appraisal_Marks() {

        var Appraisal_Marks = (Number($("#Action_Taken").val()) * Total_Marks / Number($("#Current_Month_Remaining_for_Audit").val()));
        Appraisal_Marks = Appraisal_Marks.toFixed(2);

        if (Appraisal_Marks > Total_Marks) {
            Appraisal_Marks = Total_Marks
        }

        if(isNaN(Appraisal_Marks)) {  // Matches +0, -0, NaN
            Appraisal_Marks = 0;
        }

        $("#Appraisal_Marks").val(Number(Appraisal_Marks));
        $("#Appraisal_Marks_val").val(Number(Appraisal_Marks));
        $("#Appraisal_Marks_val").css("font-weight", "bold");
    }

    function SetValue() {
        $("#Appraisal_Percentage").val(Number($("#Appraisal_Percentage_val").val()));
        $("#Appraisal_Marks").val(Number($("#Appraisal_Marks_val").val()));
        $("#Current_Month_Remaining_for_Audit").val(Number($("#Current_Month_Remaining_for_Audit_val").val()));
    }



    $("#Eligible_for_Audit").change(Current_Month_Remaining_for_Audit);
    $("#Current_Month_Audit").change(Current_Month_Remaining_for_Audit);


    $("#Action_Taken").change(Percentage_Action_Taken);
    $("#Current_Month_Remaining_for_Audit").change(Percentage_Action_Taken);

    $("#Action_Taken").change(Marks_Action_Taken);
    $("#Current_Month_Remaining_for_Audit").change(Marks_Action_Taken);


    $("#Eligible_for_Audit").change(Appraisal_Percentage);
    $("#Current_Month_Audit").change(Appraisal_Percentage);
    $("#Action_Taken").change(Appraisal_Percentage);
    $("#Current_Month_Remaining_for_Audit").change(Appraisal_Percentage);

    $("#Eligible_for_Audit").change(Appraisal_Marks);
    $("#Current_Month_Audit").change(Appraisal_Marks);
    $("#Action_Taken").change(Appraisal_Marks);
    $("#Current_Month_Remaining_for_Audit").change(Appraisal_Marks);
    $("#Appraisal_Percentage").change(Appraisal_Marks);


    $('#NotApplicable').prop('checked', false); // Unchecks Not Applicable by default

    $('#NotApplicable').click(function () {
        //If the checkbox is checked.
        if ($(this).is(':checked')) {
            //If it is checked, hide form
            $("#WrappperDiv").css("display", "none");

            $("#Eligible_for_Audit").val("0");
            $("#Current_Month_Audit").val("0");
            $("#Current_Month_Remaining_for_Audit").val("0");
            $("#Action_Taken").val("0");
            $("#Percentage_Action_Taken").val("0");
            $("#Remaining_for_Audit").val("0");
            $("#Marks_Action_Taken").val("0");

            $("#Appraisal_Marks").val("0");
            $("#Appraisal_Percentage").val("0");
            $("#Appraisal_Marks_val").val("0");
            $("#Appraisal_Percentage_val").val("0");
            $("#NotApplicable").val(true);

        } else {

            //If it is not checked, show form
            $("#WrappperDiv").css("display", "block");
        }
    });


</script>
