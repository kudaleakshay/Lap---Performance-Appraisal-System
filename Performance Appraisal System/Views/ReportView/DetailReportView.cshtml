    });


    function bindDataTable() {

        var UId = $("#UId").val();

        var Month = $("#Month").val();
        $("#Month").blur();

        var Year = $("#Year").val();
        $("#Year").blur();

        var SelectedYear = $("#Year option:selected").html();
        var SelectedMonth = $("#Month option:selected").html();

        table = $("#ReportTable").DataTable({
            paging: false,
            responsive: true,
            processing: true,
            autoWidth: true,
            filter: true,
            info: false,
            fixedColumns: true,
            order: [],
            language: {
                emptyTable: "माहिती उपलब्ध नाही - कृपया दुसरा  महिना/वर्ष निवडा"
            },
            rowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                switch (aData.report.DepartmentId) {
                    case 1:
                        $('td', nRow).css('background-color', '#ffe6e6');
                        break;
                    case 2:
                        $('td', nRow).css('background-color', '#ffffcc');
                        break;
                    case 3:
                        $('td', nRow).css('background-color', '#ccffdd');
                        break;
                    case 4:
                        $('td', nRow).css('background-color', '#ccffff');
                        break;
                    case 5:
                        $('td', nRow).css('background-color', '#f7e6ff');
                        break;
                    case 6:
                        $('td', nRow).css('background-color', '#fff5e5');
                        break;
                    case 7:
                        $('td', nRow).css('background-color', '#f0f0f5');
                        break;
                    case 8:
                        $('td', nRow).css('background-color', '#ffe0cc');
                        break;
                    case 9:
                        $('td', nRow).css('background-color', '#ccd9ff');
                        break;
                    case 10:
                        $('td', nRow).css('background-color', '#eeeedd');
                        break;
                }
            },
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // Remove the formatting to get integer data for summation
                var intVal = function (i) {
                    return typeof i === 'string' ?
                        i.replace(/[\$,]/g, '') * 1 :
                        typeof i === 'number' ?
                            i : 0;
                };

                // Total over all pages
                total_Marks = api
                    .column(2)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                total_Appraisal = api
                    .column(3)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                if (total_Appraisal > 0 && total_Marks > 0) {
                    total_Percentage = total_Appraisal * 100 / total_Marks;
                }
                else {
                    total_Percentage = 0;
                }

                // Update footer
                $(api.column(2).footer()).html(
                    total_Marks
                );
                $(api.column(3).footer()).html(
                    total_Appraisal.toFixed(2)
                );
                $(api.column(4).footer()).html(
                    total_Percentage.toFixed(2) + ' %'
                );
            },
            "ajax": {
                "url": "/ReportView/GetDetailReportData?UId=" + UId + "&Month=" + Month + "&Year=" + Year,
               "type": "GET",
                  "datatype": "json",
                "error": function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Something went wrong, Please try again...");
                }
            },
            "columns": [
                { "data": "DepartmentName" },
                { "data": "Subject" },
                { "data": "report.Total_Marks" },
                { "data": "report.Appraisal_Marks" },
                { "data": "report.Appraisal_Percentage" },
                {
                    "render": function (data, type, full, meta) {
                            return '<button style="margin-bottom: 0 !important;" class = "btn btn-outline-dark">Report</button>';
                    }
                },
            ],
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', text: 'Download Report', title: "@ViewBag.UserName मुल्यांकन प्रणाली अहवाल -"+ SelectedMonth + " " + SelectedYear },
                { extend: 'print', text: 'Print', title: "@ViewBag.UserName मुल्यांकन प्रणाली अहवाल -"+ SelectedMonth + " " + SelectedYear }
            ]
        });

    }

