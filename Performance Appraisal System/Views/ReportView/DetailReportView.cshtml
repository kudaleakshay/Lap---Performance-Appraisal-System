    $('#ReportTable tbody').on('click', 'button', function () {
        var data = table.row($(this).parents('tr')).data();

        window.open(
                "/ReportView/GetDepartmentReportView?DepartmentId=" + data.report.DepartmentId + "&SubjectId=" + data.report.SubjectId, "_self");
