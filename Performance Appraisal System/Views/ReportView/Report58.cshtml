</div>


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    $(document).ready(function () {
        bindDataTable();
    });

    function bindDataTable() {

        var Month = $("#Month").val();
        var Year = $("#Year").val();
        var DepartmentId = $("#DepartmentId").val();
        var SubjectId = $("#SubjectId").val();

        table = $("#ReportTable").DataTable({
            paging: false,
            responsive: true,
            processing: true,
            autoWidth: true,
            filter: true,
            info: false,
            fixedColumns: true,
            language: {
                emptyTable: "माहिती उपलब्ध नाही "
            },
            rowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                if (aData.report.Remarks == "Late") {
                    $('td', nRow).css('background-color', '#ffe6e6');
                }
                else {
                    $('td', nRow).css('background-color', '#e6ffe6');
                }
            },
            "ajax": {
                "url": "/ReportView/GetDepartmentReportData?DepartmentId=" + DepartmentId + "&SubjectId=" + SubjectId + "&Month=" + Month + "&Year=" + Year,
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "UserName" },
                { "data": "report.Annual_Target" },
                { "data": "report.Current_Month_Aim_Count" },
                { "data": "report.Current_Month_Aim_Amount" },
                { "data": "report.Last_Month_Achieved_Count" },
                { "data": "report.Last_Month_Achieved_Amount" },
                { "data": "report.Current_Month_Achieved_Count" },
                { "data": "report.Current_Month_Achieved_Amount" },
                { "data": "report.Total_Count" },
                { "data": "report.Total_Amount" },
                { "data": "report.Current_Month_Percentage" },
                { "data": "report.Appraisal_Marks" },
                { "data": "report.Appraisal_Percentage"}
            ],
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', text: 'Download Report'}
            ]
        });
    }


    $("#Month").change(function () {
        table.destroy();
        bindDataTable();
        $("#Month").blur();
    })

    $("#Year").change(function () {
        table.destroy();
        bindDataTable();
        $("#Year").blur();
    })

</script>
