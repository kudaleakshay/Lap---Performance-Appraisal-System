@model Performance_Appraisal_System.ViewModels.DepartmentsReportViewModel

@{
    ViewBag.Title = "Report60";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 30px;background: white;">
    <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
        <br>
        <br>
        <h5 class="card-title text-center"><strong>विभागीय सहनिबंधक, जिल्हा उपनिबंधक व त्या अंतर्गत असलेले उपनिबंधक कार्यालये यांचा मुल्यांकन प्रणाली अहवाल</strong></h5>
        <hr>
        <div class="card-text">

            <div class="center-group">
                <div class="form-row">
                    <div class="form-group col-md-6 center-div">
                        @Html.DropDownListFor(model => model.Month, (IEnumerable<SelectListItem>)ViewBag.Months, new { @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Month)
                    </div>

                    <div class="form-group col-md-6 center-div">
                        @Html.DropDownListFor(model => model.Year, (IEnumerable<SelectListItem>)ViewBag.Years, new { @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Year)
                    </div>
                </div>

                @Html.HiddenFor(temp => temp.DepartmentId, new { id = "DepartmentId" })
                @Html.HiddenFor(temp => temp.SubjectId, new { id = "SubjectId" })
                <hr>
                <br>
                <br>

                <div style="overflow: auto;">

                    <table id="ReportTable" class="table">
                        <thead style="text-align: center;
        vertical-align: middle !important;">
                            <tr>
                                <th rowspan="2">विभाग</th>
                                <th colspan="3">अधिकारी/कर्मचारी संख्या</th>
                                <th colspan="3">लक्षांक</th>
                                <th rowspan="2">चालु महिना अखेर उद्दीष्टे</th>
                                <th colspan="3">सहकारी संख्या तपासणी साध्य</th>
                                <th rowspan="2">चालु महिना अखेर उद्दीष्टांच्या  साध्यतेनुसार टक्केवारी</th>
                                <th rowspan="2">मुल्यांकनानुसार एकुण प्राप्त गुण</th>
                                <th rowspan="2">प्राप्त गुणांची टक्केवारी</th>
                            </tr>

                            <tr>
                                <th>अधिकारी</th>
                                <th>कर्मचारी</th>
                                <th>एकुण</th>
                                <th>अधिकारी लक्षांक</th>
                                <th>कर्मचारी लक्षांक</th>
                                <th>एकुण लक्षांक</th>
                                <th>मागील महिना</th>
                                <th>चालू महिना</th>
                                <th>एकुण</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;"></tbody>
                        <tfoot>
                            <tr style="background:#a8bdbd; font-size:18px">
                                <th style="text-align:center">महाराष्ट्र</th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                                <th style="text-align:center"></th>
                            </tr>
                        </tfoot>
                    </table>
                    <br>
                    <br>
                </div>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    $(document).ready(function () {
        bindDataTable();
    });

    function bindDataTable() {

        var Month = $("#Month").val();
        var Year = $("#Year").val();
        var DepartmentId = $("#DepartmentId").val();
        var SubjectId = $("#SubjectId").val();

        table = $("#ReportTable").DataTable({
            paging: false,
            responsive: true,
            processing: true,
            autoWidth: true,
            filter: false,
            info: false,
            fixedColumns: true,
            language: {
                emptyTable: "माहिती उपलब्ध नाही "
            },
            rowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                if (aData.report.Remarks == "Late") {
                    $('td', nRow).css('background-color', '#ffe6e6');
                }
                else {
                    $('td', nRow).css('background-color', '#e6ffe6');
                }
            },
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // Remove the formatting to get integer data for summation
                var intVal = function (i) {
                    return typeof i === 'string' ?
                        i.replace(/[\$,]/g, '') * 1 :
                        typeof i === 'number' ?
                            i : 0;
                };


                // Total over all pages
                total_M_Percentage = api
                    .column(11)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                total_Appraisal = api
                    .column(12)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                total_Percentage = api
                    .column(13)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                // Update footer
                $(api.column(11).footer()).html(
                    total_M_Percentage + ' %'
                );
                $(api.column(12).footer()).html(
                    total_Appraisal
                );
                $(api.column(13).footer()).html(
                    total_Percentage + ' %'
                );
            },
            "ajax": {
                "url": "/ReportView/GetDepartmentReportData?DepartmentId=" + DepartmentId + "&SubjectId=" + SubjectId + "&Month=" + Month + "&Year=" + Year,
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "UserName" },
                { "data": "report.Officer_Count" },
                { "data": "report.Staff_Count" },
                { "data": "report.Total_Staff" },
                { "data": "report.Officer_Target" },
                { "data": "report.Staff_Target" },
                { "data": "report.Total_Target" },
                { "data": "report.Current_Month_Aim" },
                { "data": "report.Last_Month_Achieved" },
                { "data": "report.Current_Month_Achieved" },
                { "data": "report.Total_Achieved" },
                { "data": "report.Current_Month_Percentage" },
                { "data": "report.Appraisal_Marks" },
                { "data": "report.Appraisal_Percentage" }
            ]
        });
    }


    $("#Month").change(function () {
        table.destroy();
        bindDataTable();
        $("#Month").blur();
    })

    $("#Year").change(function () {
        table.destroy();
        bindDataTable();
        $("#Year").blur();
    })

</script>