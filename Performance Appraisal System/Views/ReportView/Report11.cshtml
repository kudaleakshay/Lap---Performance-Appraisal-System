<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    $(document).ready(function () {
        bindDataTable();
    });


    function bindDataTable() {

        var Month = $("#Month").val();
        var Year = $("#Year").val();
        var DepartmentId = $("#DepartmentId").val();
        var SubjectId = $("#SubjectId").val();

        table = $('#ReportTable').DataTable({
            paging: false,
            responsive: true,
            processing: true,
            autoWidth: true,
            filter: true,
            info: false,
            fixedColumns: true,
            language: {
                emptyTable: "माहिती उपलब्ध नाही "
            },
            rowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                if (aData.report.Remarks == "Late") {
                    $('td', nRow).css('background-color', '#ffe6e6');
                }
                else {
                    $('td', nRow).css('background-color', '#e6ffe6');
                }
            },
            "ajax": {
                "url": "/ReportView/GetDepartmentReportData?DepartmentId=" + DepartmentId + "&SubjectId=" + SubjectId + "&Month=" + Month + "&Year=" + Year,
                "type": "GET",
                "datatype": "json",
                "error": function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Something went wrong, Please try again...");
                }
            },
            "columns": [
                { "data": "UserName" },
                { "data": "report.Inquiry_C" },
                { "data": "report.Inquiry_D" },
                { "data": "report.Inquiry_Total" },
                { "data": "report.Inquiry_Target_C" },
                { "data": "report.Inquiry_Target_D" },
                { "data": "report.Inquiry_Total_Target" },
                { "data": "report.Inquiry_Achieved_C" },
                { "data": "report.Inquiry_Achieved_D" },
                { "data": "report.Inquiry_Total_Achieved" },
                { "data": "report.Inquiry_Remaining_C" },
                { "data": "report.Inquiry_Remaining_D" },
                { "data": "report.Inquiry_Total_Remaining" },
                { "data": "report.Appraisal_Marks" },
                { "data": "report.Appraisal_Percentage" }
            ],
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', text: 'Download Report' },
                { extend: 'print', text: 'Print' }
            ]
        });


        const tableData = getTableData(table);
        createHighcharts(tableData);
        setTableEvents(table);
    }


    function getTableData(table) {
        const dataArray = [],
            BranchArray = [],
            PercentageArray = []

        // loop table rows
        table.rows({ search: "applied" }).every(function () {
            const data = this.data();
            BranchArray.push(data.UserName);
            PercentageArray.push(parseInt(data.report.Appraisal_Percentage));
        });

        // store all data in dataArray
        dataArray.push(BranchArray, PercentageArray);

        return dataArray;
    }

    function createHighcharts(data) {
        Highcharts.setOptions({
            lang: {
                thousandsSep: ","
            }
        });

        Highcharts.chart("chart", {
            title: {
                text: "@ViewBag.Title"
            },
            xAxis: [
                {
                    categories: data[0],
                    labels: {
                        rotation: 0
                    }
                }
            ],
            yAxis: [
                {
                    title: {
                        text: "मूल्यांकन टक्केवारी"
                    }
                }
            ],
            series: [
                {
                    name: "मूल्यांकन टक्केवारी",
                    color: "#ffc107",
                    type: "column",
                    data: data[1],
                    tooltip: {
                        valueSuffix: " %"
                    }
                }
            ],
            tooltip: {
                shared: true
            },
            legend: {
                backgroundColor: "#ececec",
                shadow: true,
            },
            credits: {
                enabled: false
            },
            noData: {
                style: {
                    fontSize: "16px"
                }
            }
        });
    }

    let draw = false;

    function setTableEvents(table) {
        // listen for page clicks
        table.on("page", () => {
            draw = true;
        });

        // listen for updates and adjust the chart accordingly
        table.on("draw", () => {
            if (draw) {
                draw = false;
            } else {
                const tableData = getTableData(table);
                createHighcharts(tableData);
            }
        });
    }



    $("#Month").change(function () {
        table.destroy();
        bindDataTable();
        $("#Month").blur();
    })

    $("#Year").change(function () {
        table.destroy();
        bindDataTable();
        $("#Year").blur();
    })

</script>
