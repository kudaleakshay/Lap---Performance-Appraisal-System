@model Performance_Appraisal_System.Models.DepartmentMasterReport
@{
    ViewBag.Title = "महाराष्ट्र राज्य जिल्हा-निहाय मुल्यांकन प्रणाली अहवाल";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 30px;background: white;">
    <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
        <br>
        <br>
        <h5 class="card-title text-center" style="color: #e77817 !important; font-size: 20px;"><strong>महाराष्ट्र राज्य जिल्हा-निहाय मुल्यांकन प्रणाली अहवाल</strong></h5>
        <hr>
        <div class="card-text">

            <div class="center-group">
                <div class="form-row">
                    <div class="form-group col-md-6 center-div">
                        @Html.DropDownListFor(model => model.Month, (IEnumerable<SelectListItem>)ViewBag.Months, new { @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Month)
                    </div>

                    <div class="form-group col-md-6 center-div">
                        @Html.DropDownListFor(model => model.Year, (IEnumerable<SelectListItem>)ViewBag.Years, new { @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Year)
                    </div>
                </div>

                @Html.HiddenFor(temp => temp.UId, new { id = "UId" })
                <hr>
                <br>
                <br>

                <div style="overflow: auto;">

                    <table id="BranchTable" class="table table-striped branchtable">
                        <thead style="text-align: center; vertical-align: middle !important; background-color: #a8bdbd">
                            <tr>
                                <th style="width:40%">विभाग  / जिल्हे </th>
                                <th>एकुण गुण</th>
                                <th>प्राप्त गुण</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;"></tbody>
                    </table>
                    <br>
                    <br>
                </div>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    $(document).ready(function () {

        bindDataTable();
    });


    function bindDataTable() {

        var UId = $("#UId").val();

        var Month = $("#Month").val();
        $("#Month").blur();

        var Year = $("#Year").val();
        $("#Year").blur();

        table = $("#BranchTable").DataTable({
            paging: false,
            responsive: true,
            processing: true,
            autoWidth: true,
            filter: false,
            info: false,
            fixedColumns: true,
            language: {
                emptyTable: "माहिती उपलब्ध नाही - कृपया दुसरा  महिना/वर्ष निवडा"
            },
            "ajax": {
                "url": "/ReportView/GetStateReportData?Month=" + Month + "&Year=" + Year,
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name" },
                { "data": "Total_Marks" },
                { "data": "Appraisal_Marks" },
                {
                    "render": function (data, type, full, meta) {
                        return '<button style="float:center;" class = "btn btn-info">Report</button>';
                    }
                },
            ],
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', text: 'Download Report'}
            ]
        });
    }


    $("#Month").change(function () {
        table.destroy();
        bindDataTable();
    })

    $("#Year").change(function () {
        table.destroy();
        bindDataTable();
    })

    $('#BranchTable tbody').on('click', 'button', function () {
        var data = table.row($(this).parents('tr')).data();
        window.open(
            "/ReportView/GetOfficeReportView?UId=" + data.UId, "_self");
    });


</script>