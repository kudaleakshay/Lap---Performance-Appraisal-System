                            @Html.ValidationMessageFor(temp => temp.Total_Target)
                            @Html.HiddenFor(temp => temp.Total_Target, new { id = "Total_Target" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">सहकारी संस्थांचे उद्दीष्टे / साध्य</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
