@model Performance_Appraisal_System.Models.Report60
@{
    ViewBag.Title = "सहकारी संस्थांची तपासणी";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}


<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">कार्यरत अधिकारी / कर्मचारी संख्या</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Officer_Count)
                            @Html.TextBoxFor(temp => temp.Officer_Count, new { id = "Officer_Count", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Officer_Count)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Staff_Count)
                            @Html.TextBoxFor(temp => temp.Staff_Count, new { id = "Staff_Count", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Staff_Count)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Staff)
                            @Html.TextBoxFor(temp => temp.Total_Staff, new { id = "Total_Staff_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Total_Staff)
                            @Html.HiddenFor(temp => temp.Total_Staff, new { id = "Total_Staff" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">तपासणीसाठी एकुण वाटप केलेले सहकारी संस्थांचे उद्दीष्टे (दरमहा प्रत्येकी अधिकारी/कर्मचारी 02 सहकारी संख्या याप्रमाणे)</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Officer_Target)
                            @Html.TextBoxFor(temp => temp.Officer_Target, new { id = "Officer_Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Officer_Target)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Staff_Target)
                            @Html.TextBoxFor(temp => temp.Staff_Target, new { id = "Staff_Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Staff_Target)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Target)
