@model Performance_Appraisal_System.Models.Report16

@{
    ViewBag.Title = "मा.सर्वोच्च / उच्च न्यायालयातील प्रकरणे शपथपत्र दाखल करणे";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}



<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">न्यायालयातील शपथपत्र दाखल केलेल्या प्रकरणांची उदिष्टे व साध्य </span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Cases_Target)
                            @Html.TextBoxFor(temp => temp.Cases_Target, new { id = "Cases_Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Cases_Target)
                        </div>
                    </div>


                    <br>
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">शपथपत्र दाखल केलेल्या प्रकरणांची संख्या (साध्य)</span>
                    <hr>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Last_Month_Achieved)
                            @Html.TextBoxFor(temp => temp.Last_Month_Achieved, new { id = "Last_Month_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Last_Month_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Achieved)
                            @Html.TextBoxFor(temp => temp.Current_Month_Achieved, new { id = "Current_Month_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Achieved)
                            @Html.TextBoxFor(temp => temp.Total_Achieved, new { id = "Total_Achieved_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Total_Achieved)
                            @Html.HiddenFor(temp => temp.Total_Achieved, new { id = "Total_Achieved" })
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <br>
        <br>

        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>

                        @*<div class="form-group col-md-10">
                                @Html.LabelFor(temp => temp.Remarks)
                                @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Remarks)
                            </div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>

</div>

@{
    Html.RenderPartial("PrintButtonBar");
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready()
    {
        $('input,textarea').attr('disabled', true);
$('#Button').prop('disabled', false);
    }

</script>