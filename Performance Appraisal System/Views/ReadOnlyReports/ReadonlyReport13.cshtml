@model Performance_Appraisal_System.Models.Report13

@{
    ViewBag.Title = "सेवा पुस्तके अद्यायावत करणे";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}


<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">सेवा पुस्तके अद्यायावती करण</span>
                    <hr>


                    <div class="form-group col-md-6">
                        @Html.LabelFor(temp => temp.Remarks)
                        @Html.TextBoxFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Remarks)
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(temp => temp.Service_Books_Total)
                        @Html.TextBoxFor(temp => temp.Service_Books_Total, new { id = "Service_Books_Total", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Service_Books_Total)
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>



    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;"> अद्यायावत झालेली सेवापुस्तके </span>
                    <hr>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Service_Books_Updation_Target)
                            @Html.TextBoxFor(temp => temp.Service_Books_Updation_Target, new { id = "Service_Books_Updation_Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Service_Books_Updation_Target)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Service_Books_Updation_Achieved)
                            @Html.TextBoxFor(temp => temp.Service_Books_Updation_Achieved, new { id = "Service_Books_Updation_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Service_Books_Updation_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Service_Books_Updation_Pending)
                            @Html.TextBoxFor(temp => temp.Service_Books_Updation_Pending, new { id = "Service_Books_Updation_Pending_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Service_Books_Updation_Pending)
                            @Html.HiddenFor(temp => temp.Service_Books_Updation_Pending, new { id = "Service_Books_Updation_Pending" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        @*
                            <div class="form-group col-md-10">
                                @Html.LabelFor(temp => temp.Remarks)
                                @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Remarks)
                            </div>
                        *@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    Html.RenderPartial("PrintButtonBar");
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready()
    {
        $('input,textarea').attr('disabled', true);
$('#Button').prop('disabled', false);
    }

</script>