@model Performance_Appraisal_System.Models.Report14

@{
    ViewBag.Title = "अभिलेखाचे वर्गीकरण";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}

<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">कार्यालय अभिलेख वर्गीकरण केलेल्या प्रकरणांची उदिष्टे (तिमाही लक्षांक याप्रमाणे)</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            @Html.LabelFor(temp => temp.Available_Applications)
                            @Html.TextBoxFor(temp => temp.Available_Applications, new { id = "Available_Applications", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Available_Applications)
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Aim)
                            @Html.TextBoxFor(temp => temp.Current_Month_Aim, new { id = "Current_Month_Aim", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Aim)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">कार्यालय अभिलेख वर्गीकरण</span>
                    <hr>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Last_Month_Classification_Achieved)
                            @Html.TextBoxFor(temp => temp.Last_Month_Classification_Achieved, new { id = "Last_Month_Classification_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Last_Month_Classification_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Classification_Achieved)
                            @Html.TextBoxFor(temp => temp.Current_Month_Classification_Achieved, new { id = "Current_Month_Classification_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Classification_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Classification_Achieved)
                            @Html.TextBoxFor(temp => temp.Total_Classification_Achieved, new { id = "Total_Classification_Achieved_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Total_Classification_Achieved)
                            @Html.HiddenFor(temp => temp.Total_Classification_Achieved, new { id = "Total_Classification_Achieved" })
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Percentage)
                            @Html.TextBoxFor(temp => temp.Current_Month_Percentage, new { id = "Current_Month_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Percentage)
                            @Html.HiddenFor(temp => temp.Current_Month_Percentage, new { id = "Current_Month_Percentage" })

                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>

                        @*<div class="form-group col-md-10">
                                @Html.LabelFor(temp => temp.Remarks)
                                @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Remarks)
                            </div>
                        *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@{
    Html.RenderPartial("PrintButtonBar");
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
