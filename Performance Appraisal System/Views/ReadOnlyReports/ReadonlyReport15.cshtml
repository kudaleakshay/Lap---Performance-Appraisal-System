@model Performance_Appraisal_System.Models.Report15

@{
    ViewBag.Title = "महालेखापाल प्रलंबित लेखापरिच्छेद अहवाल सादर करणे";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}


<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">लेखापरिच्छेद अहवाल </span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Pending_Inspection_Count)
                            @Html.TextBoxFor(temp => temp.Pending_Inspection_Count, new { id = "Pending_Inspection_Count", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Pending_Inspection_Count)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Submitted_Compliance)
                            @Html.TextBoxFor(temp => temp.Submitted_Compliance, new { id = "Submitted_Compliance", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Submitted_Compliance)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Accepted_Compliance)
                            @Html.TextBoxFor(temp => temp.Accepted_Compliance, new { id = "Accepted_Compliance", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Accepted_Compliance)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">प्रलंबित लेखापरिच्छेद </span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Target)
                            @Html.TextBoxFor(temp => temp.Target, new { id = "Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Target)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Pending_Paragraph_Count)
                            @Html.TextBoxFor(temp => temp.Pending_Paragraph_Count, new { id = "Pending_Paragraph_Count", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Pending_Paragraph_Count)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">प्रलंबित परिच्छेद उद्दिष्टये व साध्य </span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Aim)
                            @Html.TextBoxFor(temp => temp.Current_Month_Aim, new { id = "Current_Month_Aim", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Aim)
                        </div>
                    </div>
                    <hr>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Last_Month_Achieved)
                            @Html.TextBoxFor(temp => temp.Last_Month_Achieved, new { id = "Last_Month_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Last_Month_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Achieved)
                            @Html.TextBoxFor(temp => temp.Current_Month_Achieved, new { id = "Current_Month_Achieved", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Achieved)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Achieved)
                            @Html.TextBoxFor(temp => temp.Total_Achieved, new { id = "Total_Achieved_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Total_Achieved)
                            @Html.HiddenFor(temp => temp.Total_Achieved, new { id = "Total_Achieved" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Percentage)
                            @Html.TextBoxFor(temp => temp.Current_Month_Percentage, new { id = "Current_Month_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Percentage)
                            @Html.HiddenFor(temp => temp.Current_Month_Percentage, new { id = "Current_Month_Percentage" })

                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>
                        @*
                            <div class="form-group col-md-10">
                                @Html.LabelFor(temp => temp.Remarks)
                                @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Remarks)
                            </div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" style="padding: 30px;background: white;">
    <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
        <div class="card-text">
            <div class="center-group">
                <br>
                <span style="color: #e77817 !important; font-size: 17px;">
                    Confirmation / पुष्टीकरण
                </span>
                <hr>

                <div style="text-align:justify; font-size: 16px; line-height:25px">
                    I affirm that the above mentioned information submitted by me is true and correct to my knowledge and belief. / मी प्रमाणित करतो की मी वर नमूद केलेली माहिती माझ्या माहितीनुसार सत्य आणि अचूक आहे.
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" onclick="return confirm('या महिन्यासाठीचा मुल्यांकन अहवाल आपण सादर करु इच्छिता?')">Submit / माहिती भरा</button>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>


@{
    Html.RenderPartial("PrintButtonBar");
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready()
    {
        $('input,textarea').attr('disabled', true);
$('#Button').prop('disabled', false);
    }

</script>