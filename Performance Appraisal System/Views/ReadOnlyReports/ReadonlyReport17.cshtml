@model Performance_Appraisal_System.Models.Report17

@{
    ViewBag.Title = "खरीप पीक कर्जवाटप";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("PrevNextBar");
    Html.RenderPartial("ReadOnlyLayoutHeader");
}


<div id="WrappperDiv">
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">खरीप पीक कर्जवाटपाचे उद्दीष्टे व साध्य ( रक्कम रुपये लाखात )</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Loan_Allocation_Target)
                            @Html.TextBoxFor(temp => temp.Loan_Allocation_Target, new { id = "Loan_Allocation_Target", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Loan_Allocation_Target)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Last_Month_Loan_Allocation)
                            @Html.TextBoxFor(temp => temp.Last_Month_Loan_Allocation, new { id = "Last_Month_Loan_Allocation", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Last_Month_Loan_Allocation)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Current_Month_Loan_Allocation)
                            @Html.TextBoxFor(temp => temp.Current_Month_Loan_Allocation, new { id = "Current_Month_Loan_Allocation", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Current_Month_Loan_Allocation)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Total_Loan_Allocation)
                            @Html.TextBoxFor(temp => temp.Total_Loan_Allocation, new { id = "Total_Loan_Allocation_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Total_Loan_Allocation)
                            @Html.HiddenFor(temp => temp.Total_Loan_Allocation, new { id = "Total_Loan_Allocation" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>

                        @*<div class="form-group col-md-10">
                                @Html.LabelFor(temp => temp.Remarks)
                                @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                                @Html.ValidationMessageFor(temp => temp.Remarks)
                            </div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    Html.RenderPartial("PrintButtonBar");
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready()
    {
        $('input,textarea').attr('disabled', true);
$('#Button').prop('disabled', false);
    }

</script>