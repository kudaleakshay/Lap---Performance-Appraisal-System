@model Performance_Appraisal_System.Models.Report11

@{
    ViewBag.Title = "विभागीय चौकशी";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
@using (Html.BeginForm("Subject11", "O_M", FormMethod.Post))
{
    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <br>
            <br>
            <h3 class="card-title text-center"><strong>विभागीय सहनिबंधक, जिल्हा उपनिबंधक व त्या अंतर्गत असलेले उपनिबंधक कार्यालये यांसाठी अधिकाऱ्यांचा मूल्यांक भारांक तक्ता</strong></h3>
            <hr>
            <div class="card-text">
                <div class="center-group">
                    <div class="form-row">
                        <div class="form-group col-md-12 center-div" style="color: #e77817 !important; font-size: 20px;">
                            कार्यासनाचे नाव: <strong> @Session["ReportDepartmentName"].ToString() </strong> &nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp विषय: <strong> कार्यालय तपासणी </strong>
                            &nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp<strong> गुण:  @Session["TotalMarks"].ToString() </strong>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.DropDownListFor(model => model.Month, (IEnumerable<SelectListItem>)ViewBag.Months, "-- महिना निवडा --", new { @class = "form-control" })
                            <br>
                            @Html.ValidationMessageFor(temp => temp.Month)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.DropDownListFor(model => model.Year, (IEnumerable<SelectListItem>)ViewBag.Years, "-- वर्ष निवडा --", new { @class = "form-control" })
                            <br>
                            @Html.ValidationMessageFor(temp => temp.Year)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="form-group col-md-12 center-div" style="font-size: 20px;">
        @Html.CheckBoxFor(temp => temp.NotApplicable, new { id = "NotApplicable" })
        <strong>&nbsp&nbspविषय लागु नाही</strong>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">विभागीय चौकशी सुरु असलेली प्रकरणे</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_C)
                            @Html.TextBoxFor(temp => temp.Inquiry_C, new { id = "Inquiry_C", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_C)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_D)
                            @Html.TextBoxFor(temp => temp.Inquiry_D, new { id = "Inquiry_D", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_D)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Total)
                            @Html.TextBoxFor(temp => temp.Inquiry_Total, new { id = "Inquiry_Total_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Total)
                            @Html.HiddenFor(temp => temp.Inquiry_Total, new { id = "Inquiry_Total" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">विभागीय चौकशी पुर्ण करावयाचे प्रकरणे</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Target_C)
                            @Html.TextBoxFor(temp => temp.Inquiry_Target_C, new { id = "Inquiry_Target_C", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Target_C)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Target_D)
                            @Html.TextBoxFor(temp => temp.Inquiry_Target_D, new { id = "Inquiry_Target_D", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Target_D)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Total_Target)
                            @Html.TextBoxFor(temp => temp.Inquiry_Total_Target, new { id = "Inquiry_Total_Target_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Total_Target)
                            @Html.HiddenFor(temp => temp.Inquiry_Total_Target, new { id = "Inquiry_Total_Target" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">विभागीय चौकशी पुर्ण झालेली प्रकरणे</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Achieved_C)
                            @Html.TextBoxFor(temp => temp.Inquiry_Achieved_C, new { id = "Inquiry_Achieved_C", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Achieved_C)
                        </div>
                    </div>
                    <hr>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Achieved_D)
                            @Html.TextBoxFor(temp => temp.Inquiry_Achieved_D, new { id = "Inquiry_Achieved_D", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Achieved_D)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Total_Achieved)
                            @Html.TextBoxFor(temp => temp.Inquiry_Total_Achieved, new { id = "Inquiry_Total_Achieved_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Total_Achieved)
                            @Html.HiddenFor(temp => temp.Inquiry_Total_Achieved, new { id = "Inquiry_Total_Achieved" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">विभागीय चौकशीची शिल्लक प्रकरणे</span>
                    <hr>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Remaining_C)
                            @Html.TextBoxFor(temp => temp.Inquiry_Remaining_C, new { id = "Inquiry_Remaining_C", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Remaining_C)
                        </div>
                    </div>
                    <hr>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Remaining_D)
                            @Html.TextBoxFor(temp => temp.Inquiry_Remaining_D, new { id = "Inquiry_Remaining_D", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Remaining_D)
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Inquiry_Total_Remaining)
                            @Html.TextBoxFor(temp => temp.Inquiry_Total_Remaining, new { id = "Inquiry_Total_Remaining_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Inquiry_Total_Remaining)
                            @Html.HiddenFor(temp => temp.Inquiry_Total_Remaining, new { id = "Inquiry_Total_Remaining" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 16px;">मुल्यांकनानुसार प्राप्त गुण</span>
                    <hr>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Marks)
                            @Html.TextBoxFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Marks)
                            @Html.HiddenFor(temp => temp.Appraisal_Marks, new { id = "Appraisal_Marks" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(temp => temp.Appraisal_Percentage)
                            @Html.TextBoxFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage_val", @class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(temp => temp.Appraisal_Percentage)
                            @Html.HiddenFor(temp => temp.Appraisal_Percentage, new { id = "Appraisal_Percentage" })
                        </div>

                        <div class="form-group col-md-10">
                            @Html.LabelFor(temp => temp.Remarks)
                            @Html.TextAreaFor(temp => temp.Remarks, new { id = "Remarks", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Remarks)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="padding: 30px;background: white;">
        <div class="col-md-12" style="box-shadow: 0px 0px 5px lightgrey;">
            <div class="card-text">
                <div class="center-group">
                    <br>
                    <span style="color: #e77817 !important; font-size: 17px;">
                        Confirmation / पुष्टीकरण
                    </span>
                    <hr>

                    <div style="text-align:justify; font-size: 16px; line-height:25px">
                        I affirm that the above mentioned information submitted by me is true and correct to my knowledge and belief. / मी प्रमाणित करतो की मी वर नमूद केलेली माहिती माझ्या माहितीनुसार सत्य आणि अचूक आहे.
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success" OnClick="SetValue()">Submit / माहिती भरा</button>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>


    <br>
    <br>


}

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>

    function Inquiry_Total() {
        var Total = Number($("#Inquiry_C").val()) + Number($("#Inquiry_D").val());
        $("#Inquiry_Total").val(Total);
        $("#Inquiry_Total_val").val(Total);
        $("#Inquiry_Total_val").css("font-weight", "bold");
    }

    function Inquiry_Total_Target() {
        var Total = Number($("#Inquiry_Target_C").val()) + Number($("#Inquiry_Target_D").val());
        $("#Inquiry_Total_Target").val(Total);
        $("#Inquiry_Total_Target_val").val(Total);
        $("#Inquiry_Total_Target_val").css("font-weight", "bold");
    }

    function Inquiry_Total_Achieved() {
        var Total = Number($("#Inquiry_Achieved_D").val()) + Number($("#Inquiry_Inquiry_Total_Achieved").val());
        $("#Inquiry_Total_Achieved").val(Total);
        $("#Inquiry_Total_Achieved_val").val(Total);
        $("#Inquiry_Total_Achieved_val").css("font-weight", "bold");
    }


    function Appraisal_Marks() {
        var Total = ((Number($("#Inquiry_Total_Achieved").val()) * 5) / Number($("#Inquiry_Total_Target").val()));
        Total = Total.toFixed(2);
        $("#Appraisal_Marks").val(Number(Total));
        $("#Appraisal_Marks_val").val(Number(Total));
        $("#Appraisal_Marks_val").css("font-weight", "bold");
    }

    function Appraisal_Percentage() {
        var Total = (Number($("#Appraisal_Marks").val()) * 100 / 5);
        Total = Total.toFixed(2);
        $("#Appraisal_Percentage").val(Number(Total));
        $("#Appraisal_Percentage_val").val(Number(Total));
        $("#Appraisal_Percentage_val").css("font-weight", "bold");
    }

    function SetValue() {
        $("#Appraisal_Percentage").val(Number($("#Appraisal_Percentage_val").val()));
        $("#Appraisal_Marks").val(Number($("#Appraisal_Marks_val").val()));

    }


    $("#Inquiry_C").change(Inquiry_Total);
    $("#Inquiry_D").change(Inquiry_Total);

    $("#Inquiry_Target_C").change(Inquiry_Total_Target);
    $("#Inquiry_Target_D").change(Inquiry_Total_Target);

    $("#Inquiry_Achieved_D").change(Inquiry_Total_Achieved);
    $("#Inquiry_Inquiry_Total_Achieved").change(Inquiry_Total_Achieved);

    $("#Inquiry_Target_C").change(Appraisal_Marks);
    $("#Inquiry_Target_D").change(Appraisal_Marks);
    $("#Inquiry_Achieved_D").change(Appraisal_Marks);
    $("#Inquiry_Inquiry_Total_Achieved").change(Appraisal_Marks);


    $("#Inquiry_Target_C").change(Appraisal_Percentage);
    $("#Inquiry_Target_D").change(Appraisal_Percentage);
    $("#Inquiry_Achieved_D").change(Appraisal_Percentage);
    $("#Inquiry_Inquiry_Total_Achieved").change(Appraisal_Percentage);

</script>